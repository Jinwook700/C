#include <iostream>

void ShowArayElem(int *param, int len)
    {
        int i;
        for(i=0; i<len; i++)
        printf("%d", param[i]);
        printf("\n");
    }
    
int main(void)
{
    int arr1[] = {1, 2, 3};
    int arr2[] = {4, 5, 6, 7, 8};
    ShowArayElem(arr1, sizeof(arr1) / sizeof(int));
    ShowArayElem(arr2, sizeof(arr2) / sizeof(int));
    return 0;
    
}

//const : 포인터 대상의 상수 선언, 변수 못바꾸게 함
